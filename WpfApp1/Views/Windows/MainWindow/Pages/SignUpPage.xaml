<Page x:Class="WpfApp1.Views.Windows.MainWindow.Pages.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:WpfApp1.ViewModels"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Views.Windows.MainWindow.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUpPage">

    <Page.DataContext>
        <vm:SignUpViewModel/>
    </Page.DataContext>

    <Grid>

        <TextBox Text="{Binding LoginRequest.Email}"
                 Width="300" 
                 Height="100" 
                 FontSize="14"
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Top"/>

        <PasswordBox PasswordChanged="PasswordBox_PasswordChanged"
                     Width="300" 
                     Height="100" 
                     FontSize="14" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center"/>

        <Button Content="Войти"
                Command="{Binding SignInCommand}"
                Width="300" Height="100" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

    </Grid>
</Page>
